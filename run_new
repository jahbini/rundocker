#!/bin/bash

# Set error handling
set -e

# Define directories
BUILD_DIR=~/celarien
DEPLOY_DIR=~/rundocker

# Navigate to build directory and build the new image
echo "ðŸš€ Building new Docker image..."
cd "$BUILD_DIR"
docker build -t jahbini/celarien:test .

# Navigate to deployment directory
cd "$DEPLOY_DIR"

# Find the current `mysql` image ID
OLD_IMAGE_ID=$(docker images --format "{{.Repository}}:{{.Tag}} {{.ID}}" | grep "jahbini/celarien:mysql" | awk '{print $2}')

# If there is an old image, rename it to `old`
if [ -n "$OLD_IMAGE_ID" ]; then
    echo "ðŸ”„ Saving current `mysql` image as `old`..."
    docker tag "$OLD_IMAGE_ID" jahbini/celarien:old
fi

# Remove the `mysql` tag (does NOT remove the image)
docker rmi jahbini/celarien:mysql || true

# Tag the `test` image as `mysql`
echo "ðŸš€ Promoting test image to mysql..."
docker tag jahbini/celarien:test jahbini/celarien:mysql

# Restart the container using docker-compose
echo "ðŸ”„ Restarting container..."
docker-compose down celarien
docker-compose up -d celarien

echo "âœ… Deployment successful! Running the new mysql image."
